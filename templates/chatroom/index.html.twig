{% extends 'base.html.twig' %}

{% block title %}Chatroom index{% endblock %}

{% block body %}
    <h1>Chatroom index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Server</th>
                <th>Chatroom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chatroom in chatrooms %}
            <tr>
                <td>{{ chatroom.server }}</td>
                <td>{{ chatroom.chatroom }}</td>
                <td>
                    <a href="{{ path('chatroom_show', {'chatroom': chatroom.chatroom}) }}">show</a>
                    <a href="{{ path('chatroom_edit', {'chatroom': chatroom.chatroom}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chatroom_new') }}">Create new</a>
{% endblock %}
