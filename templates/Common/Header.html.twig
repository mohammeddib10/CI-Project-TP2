<!--Main Navigation-->
<header>

    <!-- Sidebar -->
    <div class="sidebar-fixed position-fixed">
        {% set _template = app.request.get('_controller')|split('::') %}
        {% set bundle = _template[0]|split('\\') %}

        <a class="logo-wrapper waves-effect">
            <img src="https://mdbootstrap.com/img/logo/mdb-email.png" class="img-fluid" alt="">
        </a>

        <div class="list-group list-group-flush">
            <a href="{{ path('user_index') }}" class="list-group-item {% if bundle[2] == 'UserController' %} active {% endif %} waves-effect">
                <i class="fas fa-chart-pie mr-3"></i>Users
            </a>
            <a href="{{ path('chatroom_index') }}" class="list-group-item {% if bundle[2] == 'ChatroomController' %} active {% endif %} list-group-item-action waves-effect">
                <i class="fas fa-user mr-3"></i>Chatrooms</a>
        </div>

    </div>
    <!-- Sidebar -->

</header>
